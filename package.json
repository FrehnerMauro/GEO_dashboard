{
  "name": "geo-platform",
  "version": "1.0.0",
  "description": "Production-ready GEO (Generative Engine Optimization) platform - Monorepo",
  "type": "module",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "deploy:backend": "cd backend && npm run deploy",
    "deploy:frontend": "cd frontend && npm run deploy",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "typecheck": "tsc --noEmit",
    "db:migrate": "cd backend && npm run db:migrate",
    "db:migrate:remote": "cd backend && npm run db:migrate:remote",
    "db:create": "cd backend && npm run db:create"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "typescript": "^5.5.0",
    "vitest": "^1.6.0"
  }
}
